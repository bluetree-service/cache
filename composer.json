{
    "name": "bluetree-service/cache",
    "type": "library",
    "license": "Apache-2.0",
    "description": "Compatible with PSR-6 and PSR-16 cache library",
    "keywords": ["cache", "psr-6", "psr-16"],
    "homepage": "https://github.com/bluetree-service/cache",
    "authors": [
        {
            "name": "Micha≈Ç Adamiak",
            "email": "chajr@bluetree.pl",
            "homepage": "https://github.com/chajr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/cache": "^1.0",
        "psr/simple-cache": "^1.0"
    },
    "require-optional": {    
        "ext-memcached": "*",
        "ext-redis": "*"
    },
    "autoload": {
        "psr-4": {
            "BlueCache\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpdocumentor/reflection-docblock": "^6.0",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --display-warnings",
        "coverage": "./vendor/bin/phpunit --display-warnings --coverage-clover build/logs/clover.xml",
        "test-complete": [
            "@coverage",
        ]
    }
}
